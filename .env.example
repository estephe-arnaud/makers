# =============================================================================
# MAKERS Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# cp .env.example .env

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/
MONGO_DATABASE_NAME=makers_db
MONGODB_COLLECTION_NAME=makers_collection
MONGO_MAX_POOL_SIZE=50
MONGO_TIMEOUT_MS=5000
LANGGRAPH_CHECKPOINTS_COLLECTION=langgraph_checkpoints

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Default provider: groq (for unlimited/free tier usage)
DEFAULT_LLM_MODEL_PROVIDER=groq

# Groq (default - unlimited/free tier with smaller model)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_NAME=llama-3.1-8b-instant

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_OPENAI_GENERATIVE_MODEL=gpt-4

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GEMINI_MODEL_NAME=gemini-pro

# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_REPO_ID=mistralai/Mixtral-8x7B-Instruct-v0.1

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_GENERATIVE_MODEL_NAME=mistral

# =============================================================================
# Embedding Configuration
# =============================================================================
DEFAULT_EMBEDDING_PROVIDER=ollama

# OpenAI Embeddings
OPENAI_EMBEDDING_MODEL_NAME=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSION=1536

# HuggingFace Embeddings
HUGGINGFACE_EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_EMBEDDING_MODEL_DIMENSION=384

# Ollama Embeddings
OLLAMA_EMBEDDING_MODEL_NAME=nomic-embed-text
OLLAMA_EMBEDDING_MODEL_DIMENSION=768

# =============================================================================
# Data Processing Configuration
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# ArXiv Configuration
# =============================================================================
ARXIV_DEFAULT_QUERY=Reinforcement Learning for Robotics
ARXIV_MAX_RESULTS=10
ARXIV_SORT_BY=SubmittedDate
ARXIV_SORT_ORDER=Descending
ARXIV_DOWNLOAD_DELAY_SECONDS=3

# =============================================================================
# Optional API Keys (for additional features)
# =============================================================================
# Anthropic (Claude) - not currently used but available
ANTHROPIC_API_KEY=

# Tavily (web search) - not currently used but available
TAVILY_API_KEY=

# Weights & Biases (experiment tracking)
WANDB_API_KEY=

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
PYTHON_ENV=development
