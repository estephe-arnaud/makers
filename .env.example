# =============================================================================
# MAKERS Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Default: Groq (unlimited/free tier with generous limits)
DEFAULT_LLM_MODEL_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_NAME=llama-3.3-70b-versatile

# -----------------------------------------------------------------------------
# Embedding Provider Configuration
# -----------------------------------------------------------------------------
# Default: HuggingFace (local, unlimited, free - no API key needed)
# The model will be downloaded automatically on first use
DEFAULT_EMBEDDING_PROVIDER=huggingface
HUGGINGFACE_EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Alternative Providers (uncomment to use)
# =============================================================================

# -----------------------------------------------------------------------------
# Alternative LLM Providers
# -----------------------------------------------------------------------------

# Google Gemini
# DEFAULT_LLM_MODEL_PROVIDER=google
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_GEMINI_MODEL_NAME=gemini-pro

# OpenAI
# DEFAULT_LLM_MODEL_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# DEFAULT_OPENAI_GENERATIVE_MODEL=gpt-4

# Ollama (local - requires Ollama installed)
# DEFAULT_LLM_MODEL_PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_GENERATIVE_MODEL_NAME=mistral

# HuggingFace API
# DEFAULT_LLM_MODEL_PROVIDER=huggingface_api
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# HUGGINGFACE_REPO_ID=mistralai/Mixtral-8x7B-Instruct-v0.1

# -----------------------------------------------------------------------------
# Alternative Embedding Providers
# -----------------------------------------------------------------------------

# Ollama (local, unlimited, free - requires Ollama installed)
# DEFAULT_EMBEDDING_PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_EMBEDDING_MODEL_NAME=nomic-embed-text

# OpenAI (API - has costs and rate limits)
# DEFAULT_EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_EMBEDDING_MODEL_NAME=text-embedding-3-small
# OPENAI_EMBEDDING_DIMENSION=1536

# =============================================================================
# Optional Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Optional API Keys (for additional features)
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY=your_anthropic_key_here
# TAVILY_API_KEY=your_tavily_key_here
# WANDB_API_KEY=your_wandb_key_here

# -----------------------------------------------------------------------------
# Optional Environment Settings
# -----------------------------------------------------------------------------
# DEBUG=false
# PYTHON_ENV=development
# LOG_LEVEL=INFO

